<Window x:Class="PostrWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Соединение точек" Height="650" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="CoordinatesLabel" Content="Следующая точка: X = 4, Y = -1" Margin="130,54,503,466" Grid.Row="1" FontSize="14" RenderTransformOrigin="0.603,2.689"/>
        <StackPanel Orientation="Horizontal" Margin="10,0,0,0" Grid.Row="0" VerticalAlignment="Top">
            <RadioButton x:Name="RadioButton1" Content="Проверка во время выполнения" IsChecked="True" Margin="0,0,20,0" Checked="RadioButton1_Checked"/>
            <RadioButton x:Name="RadioButton2" Content="Проверка в конце" Checked="RadioButton2_Checked"/>
        </StackPanel>
        <Label x:Name="ErrorLabel" Grid.Row="1" Foreground="Red" Margin="14,34,51,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="40">
        </Label>
        <Canvas x:Name="DrawingCanvas" Grid.Row="1" Background="Transparent" MouseDown="Canvas_MouseDown" MouseMove="Canvas_MouseMove" Width="350" Height="350" Margin="10,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="ExitButton" Content="Выход" Width="100" Height="40" Grid.Row="2" HorizontalAlignment="Right" Margin="0,0,10,10" Click="ExitButton_Click"/>
        <Label Content="Постройте изображение по точкам" Margin="102,0,503,515" Grid.Row="1" FontSize="16" RenderTransformOrigin="0.603,2.689"/>
    </Grid>
</Window>